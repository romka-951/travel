  <script>
    const ROUTE_POINTS = [
      {name: "Самара", lat: 53.195, lng: 50.101, note: "Старт"},
      {name: "Санкт‑Петербург", lat: 59.9343, lng: 30.3351, note: "Пересадка"},
      {name: "Москва", lat: 55.7558, lng: 37.6173, note: "Пересадка"},
      {name: "Пекин", lat: 39.9042, lng: 116.4074, note: "Пересадка"},
      {name: "Пхукет", lat: 7.8804, lng: 98.3923, note: "Финиш"}
    ];
    const map = L.map('leaflet-map');
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { attribution: '&copy; OpenStreetMap contributors' }).addTo(map);
    const latlngs = ROUTE_POINTS.map(p => [p.lat, p.lng]);
    const poly = L.polyline(latlngs, {weight: 4, opacity: 0.9}).addTo(map);
    ROUTE_POINTS.forEach((p,i)=> L.marker([p.lat,p.lng]).addTo(map).bindPopup(`<b>${i+1}. ${p.name}</b><br>${p.note}`));
    map.fitBounds(poly.getBounds(), {padding: [30, 30]});
  </script>
  <footer class="mt-16 pb-12 text-center text-xs text-slate-500">
